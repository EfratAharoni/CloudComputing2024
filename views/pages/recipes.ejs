    <div id="content">
      <!-- כפתור להוספת ארוחה -->
      <button id="addMealButton">הוסף ארוחה</button>

      <!-- טבלה להצגת נתוני הארוחות -->
      <table>
        <thead>
          <tr>
            <th>Meal Type</th>
            <th>Date & Time</th>
            <th>Description</th>
            <th>Gram</th>
            <th>Calories</th>
            <th>Holiday</th>
          </tr>
        </thead>
        <tbody>
          <!-- שורות דינמיות יתווספו כאן -->
        </tbody>
      </table>

      <!-- Modal להוספת ארוחה -->
      <div id="mealModal" class="modal">
        <div class="modal-content">
          <span class="close-button">&times;</span>
          <h2>הוסף ארוחה</h2>
          <form id="addMealForm">
            <!-- קבוצת שדות לסוג הארוחה -->
            <div class="form-group">
              <label for="mealType">Meal Type:</label>
              <select id="mealType" name="mealType">
                <option value="breakfast">Breakfast</option>
                <option value="lunch">Lunch</option>
                <option value="dinner">Dinner</option>
                <option value="snack">Snack</option>
              </select>
            </div>

            <!-- קבוצת שדות לתאריך ושעה -->
            <div class="inline-fields">
              <div class="form-group">
                <label for="dateTime">Date & Time:</label>
                <input type="datetime-local" id="dateTime" name="dateTime">
              </div>
              <div class="form-group">
                <label for="description">Description:</label>
                <input type="file" id="descriptionImage" name="descriptionImage" accept="image/*">
              </div>
            </div>

            <!-- קבוצת שדות לגרם וקלוריות -->
            <div class="inline-fields">
              <div class="form-group">
                <label for="gram">Gram:</label>
                <input type="number" id="gram" name="gram" min="0">
              </div>
              <div class="form-group">
                <label for="calories">Calories:</label>
                <input type="number" id="calories" name="calories" min="0">
              </div>
            </div>

            <!-- קבוצת שדה לחג -->
            <div class="form-group">
              <label for="holiday">Holiday:</label>
              <input type="text" id="holiday" name="holiday">
            </div>

            <!-- כפתור שמירה -->
            <button type="submit">שמור</button>
          </form>
        </div>
      </div>
    </div>

