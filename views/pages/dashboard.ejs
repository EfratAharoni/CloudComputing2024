<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard - HealthyLife</title>
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <style>
        .container {
            background-color: #ffffff;
            padding: 2rem;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            width: 80%;
            max-width: 600px;
            margin: 20px auto;
        }

        .form-input {
            width: 100%;
            padding: 0.8rem;
            margin: 0.5rem 0;
            border: 1px solid #c4c4c4;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .submit-button {
            width: 100%;
            padding: 0.8rem;
            margin-top: 1rem;
            background-color: #A0496C;
            border: none;
            color: white;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .submit-button:hover {
            background-color: #c48aa0;
        }

        .results-container {
            margin-top: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div id="page">
        <div id="header">
            <!-- תפריט ראשי -->
        </div>
        <div id="content">
            <!-- בדיקת גלוקוז -->
            <div class="container">
                <h2>Check Glucose Level</h2>
                <form id="glucoseForm">
                    <input 
                        type="text" 
                        id="description" 
                        class="form-input"
                        placeholder="Enter food description"
                        required
                    >
                    <button type="submit" class="submit-button">Check Glucose</button>
                </form>
                <div id="glucose-results" class="results-container"></div>
            </div>

            <!-- בדיקת תאריך -->
            <div class="container">
                <h2>Check Date Info</h2>
                <form id="datePickerForm">
                    <input 
                        type="text" 
                        id="datepicker" 
                        class="form-input"
                        placeholder="Choose a date"
                        required
                    >
                    <button type="button" class="submit-button" onclick="submitDate()">Check Date</button>
                </form>
                <div id="date-results" class="results-container"></div>
            </div>

            <!-- ניתוח תמונה -->
            <div class="container">
                <h2>Analyze Food Image</h2>
                <form id="imageAnalysisForm">
                    <input 
                        type="text" 
                        id="imageUrl" 
                        class="form-input"
                        placeholder="Enter image URL"
                        required
                    >
                    <button type="submit" class="submit-button">Analyze Image</button>
                </form>
                <div id="image-results" class="results-container"></div>
            </div>
        </div>
        <div id="footer">
            <!-- פוטר -->
        </div>
    </div>

    <script>
        // בדיקת גלוקוז
        document.getElementById('glucoseForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const foodDescription = document.getElementById('description').value;
            const resultsDiv = document.getElementById('glucose-results');

            resultsDiv.innerHTML = '<p>Loading...</p>';
            try {
                const response = await fetch('/api/usda/checkGlucose', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ description: foodDescription })
                });

                const data = await response.json();
                console.log('Response from USDA API:', data);

                resultsDiv.innerHTML = `
                    <p><strong>Food:</strong> ${data.foodName || 'Unknown'}</p>
                    <p><strong>Glucose Level:</strong> ${data.glucoseLevel || 0} g</p>
                `;
            } catch (error) {
                resultsDiv.innerHTML = '<p style="color: red;">Error fetching glucose level.</p>';
            }
        });

        // בדיקת תאריך
        async function submitDate() {
            const selectedDate = document.getElementById("datepicker").value;
            const resultsDiv = document.getElementById("date-results");

            resultsDiv.innerHTML = '<p>Loading...</p>';
            try {
                const response = await fetch('/api/hebcal/check-date', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ date: selectedDate })
                });

                const data = await response.json();
                console.log('Response from Hebcal API:', data);

                if (response.ok) {
                    resultsDiv.innerHTML = `
                        <p>You selected: <strong>${selectedDate}</strong></p>
                        <p>${data.message}</p>
                    `;
                } else {
                    resultsDiv.innerHTML = `<p style="color: red;">${data.message}</p>`;
                }
            } catch (error) {
                resultsDiv.innerHTML = '<p style="color: red;">Error checking the date.</p>';
            }
        }

        // בדיקת תמונה
        document.getElementById('imageAnalysisForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const imageUrl = document.getElementById('imageUrl').value;
            const resultsDiv = document.getElementById('image-results');

            resultsDiv.innerHTML = '<p>Loading...</p>';
            try {
                const response = await fetch('/api/images/upload-url', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ imageUrl })
                });

                const data = await response.json();
                console.log('Response from Imagga API:', data);

                resultsDiv.innerHTML = `
                    <h4>${data.message}</h4>
                    ${data.ingredients ? '<ul>' + data.ingredients.map(item => `<li>${item}</li>`).join('') + '</ul>' : ''}
                `;
            } catch (error) {
                resultsDiv.innerHTML = '<p style="color: red;">Error analyzing image.</p>';
            }
        });

        // הגדרת תאריך
        $(function () {
            $("#datepicker").datepicker({
                dateFormat: "yy-mm-dd",
                showAnim: "slideDown"
            });
        });
    </script>
</body>
</html>
