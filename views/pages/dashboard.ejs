<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard - HealthyLife</title>
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <style>
        .container {
            background-color: #ffffff;
            padding: 2rem;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            width: 80%;
            max-width: 600px;
            margin: 20px auto;
        }

        .form-input {
            width: 100%;
            padding: 0.8rem;
            margin: 0.5rem 0;
            border: 1px solid #c4c4c4;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .submit-button {
            width: 100%;
            padding: 0.8rem;
            margin-top: 1rem;
            background-color: #A0496C;
            border: none;
            color: white;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .submit-button:hover {
            background-color: #c48aa0;
        }

        .results-container {
            margin-top: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div id="page">
        <div id="header">
            <!-- העתק את התפריט מהדף הראשי -->
        </div>
        <div id="content">
            <div class="container">
                <h2>Analyze Food Image</h2>
                <form id="imageAnalysisForm">
                    <input 
                        type="text" 
                        id="imageUrl" 
                        class="form-input"
                        placeholder="Enter image URL"
                        required
                    >
                    <button type="submit" class="submit-button">Analyze Image</button>
                </form>
                <div id="results" class="results-container"></div>
            </div>

            <div class="container">
                <h2>Check Date Info</h2>
                <form id="datePickerForm">
                    <input 
                        type="text" 
                        id="datepicker" 
                        class="form-input"
                        placeholder="Choose a date"
                        required
                    >
                    <button type="button" class="submit-button" onclick="submitDate()">Check Date</button>
                </form>
                <div id="selected-date" class="results-container"></div>
            </div>
        </div>
        <div id="footer">
            <!-- העתק את הפוטר מהדף הראשי -->
        </div>
    </div>

    <script>
        // Image Analysis Form
        document.getElementById('imageAnalysisForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const imageUrl = document.getElementById('imageUrl').value;
            const resultsDiv = document.getElementById('results');
            
            try {
                const response = await fetch('/api/images/upload-url', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ imageUrl })
                });
                
                const data = await response.json();
                resultsDiv.innerHTML = `
                    <h4>${data.message}</h4>
                    ${data.ingredients ? '<ul>' + data.ingredients.map(item => `<li>${item}</li>`).join('') + '</ul>' : ''}
                `;
            } catch (error) {
                resultsDiv.innerHTML = '<p style="color: red;">Error analyzing image</p>';
            }
        });

        // Date Picker Form
        $(function () {
            $("#datepicker").datepicker({
                dateFormat: "yy-mm-dd", 
                showAnim: "slideDown"
            });
        });

        async function submitDate() {
            const selectedDate = document.getElementById("datepicker").value;
            const resultsDiv = document.getElementById("selected-date");

            try {
                const response = await fetch('/api/hebcal/check-date', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ date: selectedDate })
                });

                const data = await response.json();

                if (response.ok) {
                    resultsDiv.innerHTML = `
                        <p>You selected: <strong>${selectedDate}</strong></p>
                        <p>${data.message}</p>
                    `;
                } else {
                    resultsDiv.innerHTML = `<p style="color: red;">${data.message}</p>`;
                }
            } catch (error) {
                resultsDiv.innerHTML = '<p style="color: red;">Error checking the date</p>';
            }
        }
    </script>
</body>
</html>
