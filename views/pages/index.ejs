    <style>
        /* עיצוב לכפתור ה-Log In */
        .login-button {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 10px 20px;
            background-color: #A0496C; /* צבע ורוד כהה */
            color: white; /* צבע טקסט */
            border: none;
            cursor: pointer;
            font-size: 16px;
            border-radius: 5px; /* עיגול פינות */
            transition: background-color 0.3s; /* אפקט מעבר */
        }

        /* אפקט כשעוברים מעל הכפתור */
        .login-button:hover {
            background-color: #c48aa0; /* צבע ורוד בהיר יותר בעת מעבר */
        }

        /* עיצוב לכותרת */
        .main-header {
            text-align: center;
            margin: 20px;
        }

        .main-header h1 {
            font-size: 36px;
            color: #FF007F;
            white-space: nowrap;
            display: inline;
        }

        .main-header p {
            font-size: 18px;
            color: #333;
        }

        /* עיצוב לתיבות התוכן */
        .content-section {
            display: flex;
            justify-content: space-between;
            margin: 20px;
            gap: 20px; /* רווח בין הקופסאות */
        }

        .content-box {
            flex: 1;
            background-color: #ffffff; /* צבע רקע לבן */
            padding: 20px;
            border-radius: 15px; /* פינות מעוגלות */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* צל מתחת לכל קופסה */
            text-align: center; /* מרכז את הטקסט */
            transition: transform 0.2s ease, box-shadow 0.2s ease; /* אנימציה */
        }

        .content-box h3 {
            color: #FF007F;
            font-size: 22px;
            margin-bottom: 15px; /* ריווח מתחת לכותרת */
        }

        .content-box p {
            color: #555; /* צבע טקסט אפור כהה */
            font-size: 16px;
            line-height: 1.5; /* ריווח בין השורות */
        }

        /* אפקט של ריחוף על קופסה */
        .content-box:hover {
            transform: translateY(-5px); /* אפקט הרמה בעת מעבר */
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2); /* צל חזק יותר */
        }

        /* עיצוב לתוכן הטקסט */
        .text-content {
            text-align: center;
            margin: 20px;
        }

        .text-content p {
            font-size: 18px;
            color: #333;
        }

        .text-content a {
            color: #FF007F;
            text-decoration: none;
        }

        /* סגנון לתמונות עיגול */
        .circle-image {
            width: 50px;  /* גודל התמונה */
            height: 50px;
            border-radius: 50%;  /* הפיכת התמונה לעיגול */
            object-fit: cover;  /* חיתוך התמונה כך שהיא תתמלא בעיגול */
            margin-right: 10px;  /* מרווח בין התמונה לטקסט */
        }

        /* סגנון ל-ul של האסייד */
        .aside ul {
            display: flex;
            flex-direction: column;
            list-style-type: none;
            padding: 0;
        }

        /* סגנון לכל אלמנט li */
        .aside ul li {
            display: flex;
            align-items: center;  /* סידור התמונה והטקסט לצד אחד */
            margin-bottom: 15px;
        }
    </style>
