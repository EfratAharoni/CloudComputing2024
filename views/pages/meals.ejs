        margin-top: 50px;
    }

    /* עיצוב לחלק של סינון */
.filter-section {
    margin: 20px 10% 0px ;
    display: flex;
    gap: 10px; /* מרווח קטן בין השדות והכפתור */
    align-items: center;
}

.filter-section input {
    padding: 5px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

.filter-section button {
